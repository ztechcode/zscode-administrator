<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="2dp"
    android:layout_marginEnd="8dp"
    android:background="#FFFFFF"
    android:padding="6dp"
    app:cardCornerRadius="2dp"
    app:contentPadding="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/accounts_profile_image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="left"
                android:layout_marginEnd="6dp"
                android:contentDescription="TODO"
                app:srcCompat="@drawable/ic_profile_placeholder" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/accounts_profile_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:text="Luke Sibisi"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/accounts_profile_roles"
                        android:layout_width="wrap_content"
                        android:layout_height="18dip"
                        android:layout_gravity="right"
                        android:layout_weight="0"
                        android:background="@color/colorWhite"
                        android:gravity="center_vertical"
                        android:paddingLeft="8dp"
                        android:text="ADMIN"
                        android:textAlignment="center"
                        android:textColor="@color/colorAccent"
                        android:textSize="12sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/accounts_profile_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="admin@zafritech.net" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/accounts_profile_online_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dip"
                android:layout_marginRight="6dip"
                android:layout_weight="0"
                android:tint="@color/colorAccent"
                app:srcCompat="@drawable/ic_clock_outline" />

            <TextView
                android:id="@+id/accounts_profile_lastonline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dip"
                android:layout_weight="1"
                android:gravity="bottom|left"
                android:text="Last online"
                android:textColor="@color/colorAccent"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/accounts_profile_joindate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dip"
                android:layout_weight="1"
                android:gravity="bottom|right"
                android:text="2020-01-11"
                android:textColor="@color/colorAccent"
                android:textSize="12sp" />

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>