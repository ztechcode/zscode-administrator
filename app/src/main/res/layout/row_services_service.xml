<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="1dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="1dp"
    android:background="#FFFFFF"
    android:padding="10dp"
    app:cardCornerRadius="1dp"
    app:contentPadding="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/server_image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="left"
                android:layout_marginRight="6dp"
                android:contentDescription="TODO"
                android:tint="@color/colorGreen"
                app:srcCompat="@drawable/ic_server_network" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dip"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="6dip"
                    android:layout_weight="0"
                    android:orientation="horizontal"
                    android:paddingBottom="4dip">

                    <TextView
                        android:id="@+id/service_name_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Service Name"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/service_status_text"
                        android:layout_width="60dip"
                        android:layout_height="18dip"
                        android:layout_gravity="right"
                        android:layout_weight="0"
                        android:background="@color/colorGreen"
                        android:gravity="center_vertical"
                        android:text="RUNNING"
                        android:textAlignment="center"
                        android:textColor="@color/colorWhite"
                        android:textSize="10sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:id="@+id/service_url_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Service URL" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dip"
                android:layout_weight="0"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/uptime_clock_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dip"
                    android:layout_marginRight="6dip"
                    android:layout_weight="0"
                    android:tint="@color/colorGreen"
                    app:srcCompat="@drawable/ic_clock_outline" />

                <TextView
                    android:id="@+id/service_uptime_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dip"
                    android:layout_weight="1"
                    android:gravity="bottom|left"
                    android:text="Service uptime"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/server_cpu_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dip"
                    android:layout_weight="1"
                    android:gravity="bottom|right"
                    android:text="CPU: 37%"
                    android:textColor="@color/colorGreen"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>